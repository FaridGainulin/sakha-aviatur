.location-section
  background-image: url('../images/location-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color $color-black

  &__container
    position relative
    z-index 1
    color: #fff
    text-align: center
    padding 20px 0
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 90px 0 103px

  &__sub-title
    padding 5px 0 10px
    +above($breakpoints.sm)
      padding 14px 0 40px
    +above($breakpoints.md)
      padding 16px 0 60px
    +above($breakpoints.xxl)
      padding 18px 0 83px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

.input-city-position
  margin-top: -1px;
  margin-left: -35px;
  +above($breakpoints.sm)
    margin-left: -26px;
  +above($breakpoints.md)
    margin-left: -31px;
  +above($breakpoints.xxl)
    margin-left: -35px;

.location-item
  width 280px !important
  +above($breakpoints.sm)
    width 330px !important
  +above($breakpoints.md)
    width 400px !important
  +above($breakpoints.xxl)
    width 480px !important

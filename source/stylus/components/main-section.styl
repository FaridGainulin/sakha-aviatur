.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #295181

  &__container
    position relative
    z-index 1
    padding 20px 0 0
    text-align: center
    color: #fff
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0 50px
    +above($breakpoints.md)
      padding 50px 0 80px
    +above($breakpoints.xxl)
      padding 69px 0 102px

  &__title
    padding 15px 0 10px 0
    +above($breakpoints.sm)
      padding 30px 0 20px 0
    +above($breakpoints.md)
      padding 60px 0 30px 0
    +above($breakpoints.xxl)
      padding 98px 0 37px 0

  &__title-main
    position relative
    z-index 1
    background: linear-gradient(90deg, #4271a9 0%, #1a2d43 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #fff
      border-radius: 8px;
      width: 195px;
      height: 35px;
      top: 1px;
      left: -4px;
      +above($breakpoints.sm)
        border-radius: 12px
        width: 326px;
        height: 55px;
        top: 3px;
        left: -7px;
      +above($breakpoints.md)
        border-radius: 18px
        width: 395px;
        height: 67px;
        top: 2px;
        left: -10px;v
      +above($breakpoints.xxl)
        border-radius: 23px
        width: 534px;
        height: 91px;
        top: 4px;
        left: -13px;

  &__sub-title
    position relative
    z-index 1
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.md)
      gap: 9px
    &:after
      content: ""
      position: absolute
      z-index -1
      background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.5) 100%);
      width: 231px;
      height: 3px;
      bottom: 3px;
      left: 64px;
      +above($breakpoints.sm)
        width: 241px;
        height: 4px;
        bottom: 8px;
        left: 65px;
      +above($breakpoints.md)
        width: 312px;
        height: 5px;
        bottom: 7px;
        left: 78px;
      +above($breakpoints.xxl)
        width: 344px;
        height: 6px;
        bottom: 12px;
        left: 100px;

  &__sub-title-img
    width 46px
    height: auto
    +above($breakpoints.sm)
      width 60px
    +above($breakpoints.md)
      width 70px
    +above($breakpoints.xxl)
      width 90px

  &__sub-title-text
    margin-bottom 5px
    +above($breakpoints.md)
      margin-bottom 7px
    +above($breakpoints.xxl)
      margin-bottom 10px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 10px
    +above($breakpoints.sm)
      margin-top 20px
      flex-direction: row-reverse
      justify-content flex-end
      gap: 20px
    +above($breakpoints.md)
      margin-top 25px
      gap: 30px
    +above($breakpoints.xxl)
      margin-top 35px
      gap: 42px

  &__bottom-box
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: column
      align-items: flex-start
      gap: 6px

  &__bottom-img
    width 50px
    height: auto
    +above($breakpoints.sm)
      width 180px
    +above($breakpoints.md)
      width 200px
    +above($breakpoints.xxl)
      width 229px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background-color #fff
    border-radius: 5px
    padding 15px 10px
    +above($breakpoints.sm)
      border-radius: 8px
      width 280px
      padding 20px 15px
    +above($breakpoints.md)
      border-radius: 10px
      width 300px
      padding 30px 20px
    +above($breakpoints.xxl)
      border-radius: 13px
      width 330px
      height: 291px
      padding 35px 25px

  &__img
    width: 470px;
    height: auto;
    margin: -9px 0 0 46px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 1200px;
      bottom: 0;
      left: 242px;
    +above($breakpoints.md)
      width: 1530px;
      left: 234px;
    +above($breakpoints.xxl)
      width 1920px
      left: 280px

.thanks-section
  display: flex
  flex-direction: column
  justify-content center
  align-items: center
  height: 100%

  &__container
    padding 0 15px
    max-width: 850px
    margin: 0 auto
    text-align: center
    color: #fff

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto
    // +above($breakpoints.sm)
    //   max-width 280px
    // +above($breakpoints.md)
    //   max-width 330px
    // +above($breakpoints.xxl)
    //   max-width 370px

.thanks-page
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #295181

.wrapper-header-thanks
  padding 10px 0
  +above($breakpoints.sm)
    padding 15px 0
  +above($breakpoints.md)
    padding 20px 0
  +above($breakpoints.xxl)
    padding 25px 0

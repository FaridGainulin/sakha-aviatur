.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #59C956

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 15px
    color: #fff
    +above($breakpoints.sm)
      text-align: start
      padding 60px 0 40px
    +above($breakpoints.md)
      padding 80px 0 60px
    +above($breakpoints.xxl)
      padding 150px 0 108px

  &__box
    +above($breakpoints.sm)
      margin-left 257px
    +above($breakpoints.md)
      margin-left 430px
    +above($breakpoints.xxl)
      margin-left 585px

  &__title
    font-size: 13px
    line-height: 113%
    +above($breakpoints.sm)
      padding-left 105px
      font-size: 22px
    +above($breakpoints.md)
      padding-left 165px
      line-height: 120%
      font-size: 24px
    +above($breakpoints.xxl)
      padding-left 172px
      font-size: 30px

  &__sub-title
    text-transform: uppercase
    padding 10px 0
    +above($breakpoints.sm)
      padding 15px 0
    +above($breakpoints.md)
      padding 35px 0 50px
    +above($breakpoints.xxl)
      padding 44px 0

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row-reverse
      align-items: flex-end
      justify-content flex-end
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 42px

  &__bottom-title
    font-size: 13px
    line-height: 120%
    +above($breakpoints.sm)
      margin-bottom 9px
      font-size: 15px
      line-height: 113%
    +above($breakpoints.md)
      font-size: 19px
    +above($breakpoints.xxl)
      font-size: 24px

  &__bottom-sub-title
    font-size: 13px
    line-height: 120%
    +above($breakpoints.sm)
      line-height: 113%
      font-size: 12px
    +above($breakpoints.md)
      font-size: 14px
    +above($breakpoints.xxl)
      font-size: 16px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background-color #fff
    border-radius: 5px
    padding 15px 10px
    +above($breakpoints.sm)
      border-radius: 8px
      width 280px
      padding 20px 15px
    +above($breakpoints.md)
      border-radius: 10px
      width 300px
      padding 30px 20px
    +above($breakpoints.xxl)
      border-radius: 13px
      width 330px
      height: 291px
      padding 35px 25px

  &__img
    width 280px
    height: auto
    margin: 15px 0 0 20px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 510px;
      left: -170px;
      bottom: 109px;
    +above($breakpoints.md)
      width: 808px;
      left: -245px;
      bottom: 70px;
    +above($breakpoints.xxl)
      width 936px
      left: -200px
      bottom: 111px;

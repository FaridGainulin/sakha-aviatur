.start-section
  background-image: url('../images/start-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #3FA7CF
  position relative
  padding-bottom 20px
  +above($breakpoints.sm)
    padding-bottom 50px
  +above($breakpoints.md)
    padding-bottom 70px
  +above($breakpoints.xxl)
    padding-bottom 119px

  &__container
    position relative
    z-index 1
    padding 20px 0 10px
    +above($breakpoints.sm)
      padding 30px 0 40px
    +above($breakpoints.md)
      padding 60px 0 80px
    +above($breakpoints.xxl)
      padding 85px 0 101px

  &__title
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    color: #fff
    text-transform: uppercase
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      flex-direction: row
      justify-content space-between
      gap: 0

  &__title-block
    display: flex
    align-items: center
    gap: 20px
    +above($breakpoints.sm)
      flex-direction: column
      align-items: flex-end
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 44px

  &__title-icon
    width 30px
    height: auto
    transform: rotate(-90deg)
    +above($breakpoints.sm)
      transform: unset
      width 44px
      margin-right: -15px;
    +above($breakpoints.md)
      width 54px
      margin-right: -15px;
    +above($breakpoints.xxl)
      width 64px
      margin-right: -20px;

  &__title-block-text
    position relative
    z-index 1
    font-size: 15px
    line-height: 120%
    text-align: center
    +above($breakpoints.sm)
      text-align: end
      font-size: 21px
    +above($breakpoints.md)
      line-height: 125%
      font-size: 24px
    +above($breakpoints.xxl)
      line-height: 130%
      font-size: 32px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #4271A9
      border-radius: 20px
      width: 171px;
      height: 20px;
      bottom: 18px;
      right: 13px;
      +above($breakpoints.sm)
        width: 247px;
        height: 27px;
        bottom: 25px;
        right: -15px;
      +above($breakpoints.md)
        width: 277px;
        height: 31px;
        bottom: 31px;
        right: -15px;
      +above($breakpoints.xxl)
        width: 366px;
        height: 46px;
        bottom: 42px;
        right: -20px;
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color #4271A9
      border-radius: 20px
      width: 213px;
      height: 21px;
      bottom: -1px;
      right: -8px;
      +above($breakpoints.sm)
        width: 309px;
        height: 27px;
        bottom: -1px;
        right: -15px;
      +above($breakpoints.md)
        width: 348px;
        height: 31px;
        bottom: 1px;
        right: -15px;
      +above($breakpoints.xxl)
        width: 462px;
        height: 46px;
        bottom: -2px;
        right: -20px;

  &__box
    width 100%
    max-width 350px
    margin 0 auto
    border-radius: 15px
    backdrop-filter: blur(30px);
    background: linear-gradient(342deg, rgba(255, 255, 255, 0.65) 0%, rgba(255, 255, 255, 0.65) 100%);
    border-left: 2px solid #fff
    border-bottom: 2px solid #fff
    border-top: 2px solid #fff
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 0
      border-radius: 20px
      max-width 850px
    +above($breakpoints.md)
      border-radius: 30px
      max-width 1100px
    +above($breakpoints.xxl)
      border-radius: 40px
      max-width 1320px
      height: 749px

  &__box-head
    width 100%
    background: linear-gradient(342deg, #fff 0%, rgba(255, 255, 255, 0.45) 100%);
    border-radius: 15px 15px 0 0
    color: #4271A9
    text-align: center
    padding 15px 0
    +above($breakpoints.sm)
      border-radius: 20px 20px 0 0
      padding 20px 0
    +above($breakpoints.md)
      border-radius: 30px 30px 0 0
      padding 25px 0
    +above($breakpoints.xxl)
      border-radius: 40px 40px 0 0
      padding 33px 0 31px
      height: 118px

  &__box-body
    display: flex
    justify-content center
    padding 20px 0
    height: 450px
    +above($breakpoints.sm)
      height: 100%
      padding 30px 0
    +above($breakpoints.md)
      padding 40px 0
    +above($breakpoints.xxl)
      padding 50px 0 57px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 40px

  &__card
    width 280px !important
    height: 404px
    border-radius: 10px
    display: flex
    flex-direction: column
    align-items: center
    background-color #fff
    overflow hidden
    +above($breakpoints.sm)
      border-radius: 15px
      width 228px !important
      height: 390px
    +above($breakpoints.md)
      border-radius: 20px
      width 300px !important
      height: 470px
    +above($breakpoints.xxl)
      border-radius: 25px
      width 348px !important
      height: 524px

  &__card-head
    position relative
    width 100%

  &__card-img
    width 100%
    height: auto

  &__card-text
    position: absolute
    color: #fff
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    text-transform: uppercase
    text-align: center
    bottom: 23px;
    left: 63px;
    +above($breakpoints.sm)
      align-items: flex-start
      text-align: start
      gap: 8px
      bottom: 15px
      left: 15px
    +above($breakpoints.md)
      gap: 10px
      bottom: 20px
      left: 20px
    +above($breakpoints.xxl)
      bottom: 30px
      left: 22px

  &__card-title
    color: #4DBE4A
    font-size: 22px
    line-height: 110%
    +above($breakpoints.sm)
      font-size: 21px
    +above($breakpoints.md)
      font-size: 24px
    +above($breakpoints.xxl)
      font-size: 32px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background-color #fff
    padding 10px 15px 15px
    +above($breakpoints.sm)
      padding 15px 25px 20px
    +above($breakpoints.md)
      padding 20px 30px 25px
    +above($breakpoints.xxl)
      padding 24px 34px 27px

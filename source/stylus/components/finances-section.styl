.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    color: $color-black-text
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0 50px
    +above($breakpoints.md)
      padding 90px 0 80px
    +above($breakpoints.xxl)
      padding 141px 0 100px

  &__box
    position relative
    +above($breakpoints.sm)
      margin-left 300px
    +above($breakpoints.md)
      margin-left 400px
    +above($breakpoints.xxl)
      margin-left 468px

  &__icon
    position: absolute
    width: 30px;
    height: 30px;
    top: 3px;
    left: -5px;
    +above($breakpoints.sm)
      width 35px
      height: 35px
      top: -44px
      left: 0
    +above($breakpoints.md)
      width 40px
      height: 40px
      top: -66px
    +above($breakpoints.xxl)
      width 49px
      height: 49px
      top: -66px

  &__title
    color: $color-black-text
    text-transform: uppercase
    padding 0 0 15px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 35px 0
    +above($breakpoints.xxl)
      padding 0 0 55px 0

  &__title-secondary
    color: #3FA7CF

  &__cards-wrapper
    position relative
    z-index 1
    background-color #E9F6FF
    padding: 20px 0 5px;
    border-radius: 10px
    +above($breakpoints.sm)
      border-radius: 15px
      padding 25px 0 25px 25px
    +above($breakpoints.md)
      border-radius: 20px
      padding 30px 0 30px 30px
    +above($breakpoints.xxl)
      padding 39px 0 40px 41px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #FAFDFF
      border-radius: 20px 10px 10px 20px
      width 60px
      height: 100%
      top: 0
      right: 0
      +above($breakpoints.sm)
        width 215px
        border-radius: 30px 15px 15px 30px
      +above($breakpoints.md)
        width 290px
        border-radius: 40px 20px 20px 40px
      +above($breakpoints.xxl)
        width 380px
        border-radius: 50px 20px 20px 50px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 20px 50px
    +above($breakpoints.md)
      gap: 30px 75px
    +above($breakpoints.xxl)
      gap: 45px 103px

  &__card
    width 280px !important
    display: flex
    justify-content center
    align-items: flex-start
    gap: 5px
    +above($breakpoints.sm)
      justify-content flex-start
      width 170px !important
      gap: 10px
    +above($breakpoints.md)
      width: 212px !important;
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px
      width 250px !important
      height: 72px

  &__card-icon
    width 15px
    height: auto
    +above($breakpoints.sm)
      width 18px
    +above($breakpoints.md)
      width 22px
    +above($breakpoints.xxl)
      width 25px

  &__card-text
    display: flex
    flex-direction: column
    gap: 5px
    +above($breakpoints.md)
      gap: 10px

  &__card-title
    color: $color-blue
    text-transform: uppercase
    font-size: 15px
    line-height: 100%
    +above($breakpoints.sm)
      font-size: 16px
    +above($breakpoints.md)
      font-size: 22px
    +above($breakpoints.xxl)
      font-size: 26px

  &__bottom
    position relative
    width 100%
    background: linear-gradient(90deg, #59c956 0%, #34a731 100%);
    color: #fff
    border-radius: 10px
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 140px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start;
      justify-content: space-between;
      margin-top 40px
      border-radius: 15px
    +above($breakpoints.md)
      border-radius: 20px
      margin-top 50px
    +above($breakpoints.xxl)
      height: 339px
      margin-top 75px

  &__bottom-img
    position: absolute
    width: 127px;
    height: auto;
    bottom: 325px;
    left: 187px;
    +above($breakpoints.sm)
      width: 166px;
      bottom: 0;
      left: 252px;
    +above($breakpoints.md)
      width: 310px;
      left: 321px;
    +above($breakpoints.xxl)
      width 349px
      left: 443px

  &__bottom-text
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    padding 10px 0 0
    letter-spacing: -0.5px
    +above($breakpoints.sm)
      text-align: start
      align-items: flex-start
      gap: 35px
      padding 20px 0 0 20px
    +above($breakpoints.md)
      gap: 30px;
      padding: 52px 0 0 30px;
    +above($breakpoints.xxl)
      gap: 36px
      padding 43px 0 0 45px

  &__bottom-title
    font-size: 13px
    line-height: 120%
    text-transform: uppercase
    +above($breakpoints.sm)
      font-size: 22px
    +above($breakpoints.md)
      font-size: 24px
    +above($breakpoints.xxl)
      font-size: 30px

  &__bottom-sub-title
    font-size: 13px
    line-height: 120%
    +above($breakpoints.sm)
      line-height: 125%
      font-size: 14px
    +above($breakpoints.md)
      line-height: 130%
      font-size: 18px
    +above($breakpoints.xxl)
      line-height: 140%
      font-size: 20px

  &__bottom-form-bg
    background-color #4271A9
    border-radius: 10px
    padding 14px
    +above($breakpoints.sm)
      border-radius: 15px
      padding 15px 15px 15px 100px
    +above($breakpoints.md)
      border-radius: 20px
      padding 20px 20px 20px 165px
    +above($breakpoints.xxl)
      padding 24px 24px 24px 226px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background-color #fff
    border-radius: 5px
    padding 15px 10px
    +above($breakpoints.sm)
      border-radius: 8px
      width 280px
      padding 20px 15px
    +above($breakpoints.md)
      border-radius: 10px
      width 300px
      padding 30px 20px
    +above($breakpoints.xxl)
      border-radius: 13px
      width 330px
      height: 291px
      padding 35px 25px

  &__img
    position: absolute
    z-index -1
    width: 280px;
    height: auto;
    top: 181px;
    left: -109px;
    +above($breakpoints.sm)
      width: 529px;
      top: 50px;
      left: -166px;
    +above($breakpoints.md)
      width: 687px;
      top: 62px;
      left: -187px;
    +above($breakpoints.xxl)
      width 966px
      top: 100px
      left: -370px
